<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="AboutUserUi.SelectFevFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 of 8"
            android:textColor="#191919"
            android:id="@+id/t1"
            android:layout_margin="10dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Favorite"
            android:textColor="#191919"
            android:id="@+id/t2"
            android:layout_below="@id/t1"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:gravity="center"
        android:id="@+id/r1"
        android:layout_margin="20dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/c1"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/c1"
            android:text="Strength"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/c2"
            android:layout_toEndOf="@id/c1"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/c2"
            android:text="Calisthenics"
            android:gravity="center"
            android:layout_toEndOf="@id/c1"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/c3"
            android:layout_toEndOf="@id/c2"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/c3"
            android:text="Strecthing"
            android:gravity="center"
            android:layout_toEndOf="@id/c2"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1"
        android:id="@+id/r2"
        android:gravity="center"
        android:layout_margin="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/c4"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/c4"
            android:text="Home Workout"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/c5"
            android:layout_toEndOf="@id/c4"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/c5"
            android:text="HIIT"
            android:gravity="center"
            android:layout_toEndOf="@id/c4"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/c6"
            android:layout_toEndOf="@id/c5"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/c6"
            android:text="Dumbell + Barbell"
            android:gravity="center"
            android:layout_toEndOf="@id/c5"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </RelativeLayout>
</RelativeLayout>